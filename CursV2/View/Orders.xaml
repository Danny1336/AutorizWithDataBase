<Page x:Class="CursV2.View.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CursV2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders">

    <Grid>
        <DataGrid x:Name="DGridProducts" AutoGenerateColumns="False" IsReadOnly="True" Background="#1B2838" Foreground="#171A21">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Код" Binding="{Binding id}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="ФИО покупателя" Binding="{Binding Customer_name}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер покупателя" Binding="{Binding Customer_phone}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding Date_order}" Width="150"></DataGridTextColumn>
             
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
